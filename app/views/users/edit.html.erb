<div class="usernewbackground">

<div class="container">

<%= form_for @user, url: user_path(@user.id), method: :patch do |form| %>
    <div class="form-group">
        <label for="exampleInputEmail1" id="formgrouptext">First Name</label>
        <%= form.text_field :first_name, placeholder: 'First Name', class: "form-control"%>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1" id="formgrouptext">Last Name</label>
        <%= form.text_field :last_name, placeholder: 'Last Name', class: "form-control" %>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1" id="formgrouptext">Email</label>
        <%= form.text_field :email, placeholder: 'Email' , class: "form-control"%>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1" id="formgrouptext">Phone</label>
        <%= form.text_field :phone, placeholder: 'Phone' , class: "form-control"%>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1" id="formgrouptext">Address</label>
        <%= form.text_field :address, placeholder: 'Address' , class: "form-control"%>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1" id="formgrouptext">Postcode</label>
        <%= form.text_field :postcode, placeholder: 'Postcode', class: "form-control"%>
    </div>  

    <div class="form-group">
        <label for="exampleInputEmail1" id="formgrouptext">State</label>
        <%= form.select :state, options_for_select(["Selangor","Kuala Lumpur"]) , class: "form-control"%>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1" id="formgrouptext">City</label>
        <% city = CS.cities(:"10", :my) %>
        <% city << "Kuala Lumpur" %>
        <%= form.select :city, options_for_select(city) , class: "form-control"%>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1" id="formgrouptext">Password</label>
        <%= form.password_field :password ,placeholder: 'Password' , class: "form-control"%>
    </div>

    <div>
      <%= form.submit "Update Your Account", class: "text-field btn-submit form-control" %>
    </div>

 <% end  %> 

 </div>

 </div>
